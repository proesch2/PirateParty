contract Party is ERC20, Ownable{
    address public port;
    mapping(address => bool) public inParty;
    mapping(address => uint) public allocations;
    address[] public tokens;
    address public factory;
    address public router;

    modifier isOrigin(){
        require(msg.sender == tx.origin, "msg.sender NOT tx.origin");
        _;
    }

    constructor(){
        port = msg.sender;
        
    }

    function initialize(address _router, address[] calldata _tokens) external{
        require(msg.sender == port, "Must be Port!");
        router = _router;
        factory = IUniswapV2Router02(_router).factory();
        uint length = _tokens.length;
        for(uint i; i < length; ++i){
            if(!inParty[_tokens[i]]){
                tokens.push(_tokens[i]);
                inParty[_tokens[i]] = true;
            }
        }
        _transferOwnership(tx.origin);
    }

    function deposit(address token, uint amount) external payable isOrigin {
        if(token == address(0)){
            _depositWETH();
            return;
        }
        require(inParty[token], "Token provided is not part of the Party. Who do you even know here?");
        require(amount > 0, "Oh what? No tokens? Get outta here!");
        uint256 prevBal = ERC20(token).balanceOf(address(this));
        ERC20(token).transferFrom(msg.sender, address(this), amount);
        uint256 deposited = ERC20(token).balanceOf(address(this)) - prevBal;
        uint shares = _calcShares(deposited);
        _mint(msg.sender, shares);
    }

    function _calcShares(uint amount) internal view returns (uint shares) {
        uint total;
        uint length = tokens.length;
        for(uint i; i < length; ++i){
            total += IERC20(tokens[i]).balanceOf(address(this));
        }
        shares = amount / total;
    }

    function withdraw(uint amount) external isOrigin {
        require(amount > 0, "Must withdraw something!");
        uint length = tokens.length;
        for(uint i; i < length; ++i){
            ERC20(tokens[i]).transfer(msg.sender, ERC20(tokens[i]).balanceOf(address(this)) * amount / totalSupply() * allocations[tokens[i]]);
        }
        _burn(msg.sender, amount);
    }

    function edit(address from, address to, uint256 tokenAmount) external onlyOwner {
        _edit(from, to, tokenAmount);
    }

    function _edit(address from, address to, uint tokenAmount) internal {
        address weth = IUniswapV2Router02(router).WETH();
        if(from == weth || to == weth){
            address[] memory path = new address[](2);
            path[0] = from;
            path[2] = to;
            ERC20(from).approve(router, tokenAmount);
            IUniswapV2Router02(router).swapExactTokensForTokens(
                tokenAmount,
                0, 
                path,
                address(this),
                block.timestamp
            );
        }
        else{
            address[] memory path = new address[](3);
            path[0] = from;
            path[1] = weth;
            path[2] = to;
            ERC20(from).approve(router, tokenAmount);
            IUniswapV2Router02(router).swapExactTokensForTokens(
                tokenAmount,
                0, 
                path,
                address(this),
                block.timestamp
            );
        }
        allocations[from] = ERC20(from).balanceOf(address(this));
        allocations[to] = ERC20(to).balanceOf(address(this));
    }

    function refresh() external {
        uint length = tokens.length;
        for(uint i; i < length; ++i){
            allocations[tokens[i]] = ERC20(tokens[i]).balanceOf(address(this));
        }
    }

    function transferOwnership(address newOwner) public override onlyOwner isOrigin{
        require(IPartyPort(port).transferCaptain(newOwner), "Mutiny failed...");
        _transferOwnership(newOwner);
    }

    receive() external payable{
        _depositWETH();
    }

    fallback() external payable{
        _depositWETH();
    }

    function _depositWETH() internal {
        IWETH(IUniswapV2Router02(router).WETH()).deposit{value: address(this).balance}();
    }
}

contract PartyPort is IPartyPort{
    mapping(address => address[]) public getPartiesByOwner;
    mapping(address => address) public getOwnerByParty;
    address[] public allParties;
    address public constant router = 0xD99D1c33F9fC3444f8101754aBC46c52416550D1;                            

    event PartyStarted(uint, address);

    constructor(){
    }

    function totalParties() public view returns(uint){
        return allParties.length;
    }

    function getParties() external view returns (address[] memory){
        return allParties;
    }

    function ownedParties(address owner) public view returns(uint){
        return getPartiesByOwner[owner].length;
    }

    function startParty(address[] calldata tokens) external returns (address newParty) {
        require(tokens.length >= 1, "Need one or more token in party!");
        address weth = IUniswapV2Router02(router).WETH();
        address factory = IUniswapV2Router02(router).factory();
        uint length = tokens.length;
        for(uint i; i<length; i++){
            require(IUniswapV2Factory(factory).getPair(tokens[i], weth) != address(0) || tokens[i] == weth, "Need WETH or PAIR-WETH");
        }
        bytes memory bytecode = type(Party).creationCode;
        bytes32 salt = keccak256(abi.encodePacked(tokens, totalParties()));
        assembly{
            newParty := create2(0, add(bytecode, 0x20), mload(bytecode), salt)
        }
        require(newParty != address(0), "Create2: Failed on deploy");
        Party(payable(newParty)).initialize(router, tokens);
        getPartiesByOwner[tx.origin].push(newParty);
        getOwnerByParty[newParty] = tx.origin;
        allParties.push(newParty);
        emit PartyStarted(allParties.length, tx.origin);
    }

    function transferCaptain(address newCaptain) external override returns(bool){
        address captain = getOwnerByParty[msg.sender];
        address[] memory parties = getPartiesByOwner[tx.origin];
        uint length = parties.length;
        for(uint i; i < length; ++i){
            if(msg.sender == parties[i]){
                getPartiesByOwner[captain][i] = parties[length - 1];
                getPartiesByOwner[captain].pop();
                getPartiesByOwner[newCaptain].push(msg.sender);
                getOwnerByParty[msg.sender] = newCaptain;
                return true;
            }
        }
        return false;
    }
}
